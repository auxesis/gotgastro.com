
%div#container 
  
  %div#statistics
        
    %div.info.wide
      %h1 
        Statistical Breakdown
      %p.tagline
        as of 
        = Time.now.strftime("%Y/%m/%d")

      %table#holder{:cellspacing => 16}
        - @postcodes = Postcode.top_ten
        - @postcodes.each do |postcode|
          %tr
            %td.postcode
              %span.postcode= postcode['postcode'].id
            %td.suburbs
              %span.suburbs= postcode['postcode'].suburbs.map { |suburb| suburb.suburb }.join(', ')
            %td.stats
              %div.notices
                Notices issued:
                %span.total-notices= postcode['notices']
              %div.total
                Food retailers in area:
                %span.total-businesses= postcode['businesses']

      %div.reference
        Data sourced from:
        %ul
          %li= link_to "8165.0 - Counts of Australian Businesses, including Entries and Exits, Jun 2003 to Jun 2007", "http://www.abs.gov.au/AUSSTATS/abs@.nsf/mf/8165.0"
          %li= link_to "2905.0.55.001 - ABS Postal Area Concordances, Aug 2006", "http://www.abs.gov.au/AUSSTATS/abs@.nsf/39433889d406eeb9ca2570610019e9a5/caf984c0e9e6f3f3ca25730c00008632!OpenDocument"
          %li= link_to "Australia Post Postcode datafile", "http://www1.auspost.com.au/postcodes/index.asp?sub=2"
                
      %div.nav
        = link_to 'back to Gastro', '/', :class => "back"

              

